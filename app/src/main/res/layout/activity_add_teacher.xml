<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Title bar with Spinner and Title -->
        <LinearLayout
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#007bff"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical">

            <!-- Spinner styled as hamburger -->
            <Spinner
                android:id="@+id/dashboardSpinner"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:popupBackground="#FFFFFF"
                android:background="@drawable/hamburger_icon"
                android:spinnerMode="dropdown"
                android:layout_marginEnd="16dp" />


        </LinearLayout>

        <!-- Scroll content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:padding="24dp"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:clipToPadding="false"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:layoutDirection="ltr"
                android:gravity="center_horizontal"
                android:scrollbars="none">

                <TextView
                    android:text="Add Teacher"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#007bff"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp" />

                <EditText
                    android:id="@+id/teacherId"
                    android:hint="Teacher ID"
                    android:inputType="text"
                    android:background="@android:drawable/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/teacherName"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    android:background="@android:drawable/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/contactNumber"
                    android:hint="Contact Number"
                    android:inputType="phone"
                    android:background="@android:drawable/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/address"
                    android:hint="Address"
                    android:inputType="textPostalAddress"
                    android:background="@android:drawable/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/assignedCourses"
                    android:hint="Assigned Courses (e.g., Math, Physics)"
                    android:inputType="text"
                    android:background="@android:drawable/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp" />

                <Button
                    android:id="@+id/submitButton"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#007bff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:elevation="2dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>
