<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Admin_Users"
    android:padding="16dp">

    <!-- Spinner with hamburger icon -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Spinner
            android:id="@+id/dashboardSpinner"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:popupBackground="#FFFFFF"
            android:background="@drawable/icons8_hamburger_50"
            android:spinnerMode="dropdown"
            android:layout_marginEnd="16dp" />
    </LinearLayout>

    <!-- Container for Teacher -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTeacher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="8dp"
        android:cardBackgroundColor="#a8f4f4"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teacher"
            android:padding="24dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center" />
    </androidx.cardview.widget.CardView>

    <!-- Container for Student -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardStudent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="100dp"
        android:layout_marginTop="16dp"
        android:cardBackgroundColor="a8f4f4"
        app:layout_constraintTop_toBottomOf="@+id/cardTeacher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student"
            android:padding="24dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
